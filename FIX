import java.io.File
import java.nio.file.Files
import java.nio.file.Paths

String saveDebugScreenshot(String name) {
    String folder = RunConfiguration.getReportFolder()
    String evidenceDir = folder + File.separator + "Evidences"

    Files.createDirectories(Paths.get(evidenceDir))

    String path = evidenceDir + File.separator + name + "_" + System.currentTimeMillis() + ".png"

    WindowsActionHelper
        .create(WindowsDriverFactory.getWindowsSession())
        .takeScreenshot(path)

    KeywordUtil.logInfo("ðŸ“¸ Screenshot saved: " + path)
    return path
}
