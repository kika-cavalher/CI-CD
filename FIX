	@Keyword
	static def importInvoiceFiles(String csvPath, String pdfPath) {
		Steps.note("ETL: open Configure ETL")
		GlobalKeywords.NavegateToPageWithMenu(
			'menu_harmoni/buttonIntegration',
			'menu_harmoni/responsive/buttonIntegration',
			'menu_harmoni/integration/buttonConfigureETL',
			'menu_harmoni/responsive/buttonConfigureETL'
		)

		Steps.note("ETL: search 'natixis_invoice' and open integration editor")
		UIActions.setText('POC_ETL/configure_etl/inputSearch', 'natixis_invoice')
		UIActions.click('POC_ETL/configure_etl/buttonSearch')
		UIActions.click('POC_ETL/configure_etl/buttonEditInvoiceIntergration')

		Steps.note("ETL: create new import")
		UIActions.click('POC_ETL/configure_etl/buttonOtherActions')
		UIActions.click('POC_ETL/configure_etl/buttonCreateImport')

		// Ensure we are interacting with the ETL modal iframe (avoid clicking outside the modal)
		WebUI.switchToDefaultContent()
		WebUI.switchToFrame(findTestObject('POC_ETL/iframe_invoice_integration'), 20)

		Steps.note("ETL: upload CSV")
		KeywordUtil.logInfo("CSV path: ${csvPath}")

		WebUI.waitForElementVisible(findTestObject('POC_ETL/iframe_invoice_integration/buttonChooseFiles'), 20)
		WebUI.uploadFile(findTestObject('POC_ETL/iframe_invoice_integration/buttonChooseFiles'), csvPath)

		UIActions.waitForPageToBeReady(10)
		UIActions.click('POC_ETL/iframe_invoice_integration/buttonAddDocument')

		// Wait until the pager text is not empty (import processing can be slow)
		WebUI.waitForElementVisible(findTestObject('POC_ETL/iframe_invoice_integration/textPagerCountRecord'), 30)
		String txt1 = ''
		for (int i = 0; i < 60; i++) {
			txt1 = WebUI.getText(findTestObject('POC_ETL/iframe_invoice_integration/textPagerCountRecord')).trim()
			if (txt1.length() > 0 && txt1.toLowerCase().contains('record')) break
			WebUI.delay(1)
		}
		KeywordUtil.logInfo("Pager after CSV: ${txt1}")

		Steps.note("ETL: upload PDF")
		KeywordUtil.logInfo("PDF path: ${pdfPath}")

		// Use uploadFile for PDF as well (avoid sendKeys on a non-input element)
		WebUI.uploadFile(findTestObject('POC_ETL/iframe_invoice_integration/buttonChooseFiles'), pdfPath)

		UIActions.waitForPageToBeReady(10)
		UIActions.click('POC_ETL/iframe_invoice_integration/buttonAddDocument')

		// Wait again until the pager text updates (do not continue while modal is still processing)
		WebUI.waitForElementVisible(findTestObject('POC_ETL/iframe_invoice_integration/textPagerCountRecord'), 30)
		String txt2 = ''
		for (int i = 0; i < 60; i++) {
			txt2 = WebUI.getText(findTestObject('POC_ETL/iframe_invoice_integration/textPagerCountRecord')).trim()
			if (txt2.length() > 0 && txt2.toLowerCase().contains('record')) break
			WebUI.delay(1)
		}
		KeywordUtil.logInfo("Pager after PDF: ${txt2}")

		Steps.note("ETL: Import and Publish")
		AlertUtils.clickAndAcceptAlert(findTestObject('POC_ETL/iframe_invoice_integration/buttonImportAndPublish'))

		// Give the UI a short time to finalize, then close the modal safely
		WebUI.delay(5)
		UIActions.click('POC_ETL/iframe_invoice_integration/buttonClose')
		WebUI.switchToDefaultContent()
	}
