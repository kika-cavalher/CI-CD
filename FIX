    void importFile(String fullFilePath) {

        File f = new File(fullFilePath)
        String folderPath   = f.getParent()
        String fileNameOnly = f.getName()

        Robot r = new Robot()

        // 1) Ctrl+L
        pressChord(r, KeyEvent.VK_CONTROL, KeyEvent.VK_L)
        Windows.delay(0.3)

        // 2) Type folder path + Enter
        clearField(r)
        typeText(r, folderPath)
        Windows.delay(0.2)
        pressKey(r, KeyEvent.VK_ENTER)
        Windows.delay(1.5)

        // 3) TAB x2
        pressKey(r, KeyEvent.VK_TAB)
        Windows.delay(0.2)
        pressKey(r, KeyEvent.VK_TAB)
        Windows.delay(0.2)

        // 4) Alt+N
        pressChord(r, KeyEvent.VK_ALT, KeyEvent.VK_N)
        Windows.delay(0.3)

        // 5) Type file name + Enter
        clearField(r)
        typeText(r, fileNameOnly)
        Windows.delay(0.2)
        pressKey(r, KeyEvent.VK_ENTER)
        Windows.delay(0.5)

        KeywordUtil.logInfo("âœ… importFile done: " + folderPath + " -> " + fileNameOnly)
    }

    // -----------------------------
    // Low-level helpers
    // -----------------------------

    void pressKey(Robot r, int keyCode) {
        r.keyPress(keyCode)
        r.keyRelease(keyCode)
    }

    void pressChord(Robot r, int modifier, int key) {
        r.keyPress(modifier)
        r.keyPress(key)
        r.keyRelease(key)
        r.keyRelease(modifier)
    }

    void clearField(Robot r) {
        pressChord(r, KeyEvent.VK_CONTROL, KeyEvent.VK_A)
        Windows.delay(0.1)
    }

    void typeText(Robot r, String text) {
        for (char c : text.toCharArray()) {
            typeChar(r, c)
            try { Thread.sleep(10) } catch(Exception ignored) {}
        }
    }

    /*
      Important: Robot typing depends on keyboard layout.
      This mapping covers the common Windows path characters safely.
      If your runner uses PT/FR layout and ':' differs, tell me and I adapt the ':' mapping.
    */
    void typeChar(Robot r, char c) {

        switch (c) {
            case '\\':
                pressKey(r, KeyEvent.VK_BACK_SLASH)
                return
            case '/':
                pressKey(r, KeyEvent.VK_SLASH)
                return
            case '.':
                pressKey(r, KeyEvent.VK_PERIOD)
                return
            case '-':
                pressKey(r, KeyEvent.VK_MINUS)
                return
            case '_':
                pressChord(r, KeyEvent.VK_SHIFT, KeyEvent.VK_MINUS)
                return
            case ' ':
                pressKey(r, KeyEvent.VK_SPACE)
                return
            case ':':
                // Most common mapping (US layout): Shift + ;
                pressChord(r, KeyEvent.VK_SHIFT, KeyEvent.VK_SEMICOLON)
                return
        }

        int keyCode = KeyEvent.getExtendedKeyCodeForChar((int) c)

        if (keyCode == KeyEvent.VK_UNDEFINED) {
            throw new IllegalArgumentException("Unsupported char for Robot typing: [" + c + "] code=" + ((int)c) )
        }

        boolean needShift = Character.isUpperCase(c)

        if (needShift) r.keyPress(KeyEvent.VK_SHIFT)
        r.keyPress(keyCode)
        r.keyRelease(keyCode)
        if (needShift) r.keyRelease(KeyEvent.VK_SHIFT)
    }
