void importFile(String fullFilePath) {

    File f = new File(fullFilePath)
    String folderPath   = f.getParent()
    String fileNameOnly = f.getName()

    Robot r = new Robot()
    def action = WindowsActionHelper.create(WindowsDriverFactory.getWindowsSession())

    // Ctrl+L -> type folder -> Enter
    chord(r, KeyEvent.VK_CONTROL, KeyEvent.VK_L)
    Windows.delay(0.2)
    action.sendKeys(folderPath)
    Windows.delay(0.2)
    tap(r, KeyEvent.VK_ENTER)
    Windows.delay(1.2)

    // Tab x2 -> Alt+N -> type filename -> Enter
    tap(r, KeyEvent.VK_TAB); Windows.delay(0.1)
    tap(r, KeyEvent.VK_TAB); Windows.delay(0.1)

    chord(r, KeyEvent.VK_ALT, KeyEvent.VK_N)
    Windows.delay(0.2)

    action.sendKeys(fileNameOnly)
    Windows.delay(0.2)
    tap(r, KeyEvent.VK_ENTER)
}

void tap(Robot r, int key) {
    r.keyPress(key); r.keyRelease(key)
}

void chord(Robot r, int mod, int key) {
    r.keyPress(mod); r.keyPress(key)
    r.keyRelease(key); r.keyRelease(mod)
}
