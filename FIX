void importFile(String fullFilePath) {

    focusFileDialog()

    // Put full path in clipboard
    Toolkit.getDefaultToolkit().getSystemClipboard()
        .setContents(new StringSelection(fullFilePath), null)

    Windows.delay(1)

    // Try focus "File name"
    Windows.sendKeys(null, Keys.chord(Keys.ALT, "n"))
    Windows.delay(1)

    // Paste + confirm
    Windows.sendKeys(null, Keys.chord(Keys.CONTROL, "v"))
    Windows.delay(1)
    Windows.sendKeys(null, Keys.ENTER)
}

void focusFileDialog() {
    // Try common titles. Add yours if needed.
    List<String> titles = ["Open", "Ouvrir", "Abrir"]

    for (int i = 0; i < 8; i++) {
        for (String t : titles) {
            try {
                Windows.switchToWindowTitle(t)
                Windows.delay(1)
                return
            } catch (Exception ignored) {}
        }
        Windows.delay(1)
    }
    throw new Exception("File dialog not found by title")
}
